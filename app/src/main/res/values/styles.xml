<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="FirebaseLoginTheme" parent="FirebaseUI">
       <item name="android:title"> "Sign Up"</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorAccent">@color/nliveo_blue_colorPrimaryDark</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/signn</item>
    </style>



    <style name="NoActionBar" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="Style_TextView">textstylr
        <item name="fontFamily">@font/tahomabo</item>
    </style>


</resources>
