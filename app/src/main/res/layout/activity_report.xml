<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent">


 </LinearLayout>

 <ScrollView
     android:layout_width="match_parent"
     android:layout_height="match_parent">

  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      xmlns:tools="http://schemas.android.com/tools"
      android:layout_width="match_parent"
      android:orientation="vertical"
      android:layout_height="match_parent"
      tools:context=".ReportActivity">


   <android.support.v7.widget.CardView
       android:layout_width="match_parent"
       android:layout_marginTop="60dp"
       app:cardCornerRadius="8dp"
       android:layout_marginStart="20dp"
       android:layout_marginEnd="20dp"
       android:id="@+id/fc"
       android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="#FFAB91"
        android:layout_height="wrap_content">

     <android.support.v7.widget.CardView
         android:layout_width="40dp"
         app:cardCornerRadius="40dp"
         android:layout_marginStart="15dp"
         android:layout_height="40dp">

      <ImageView
          android:layout_width="wrap_content"
          android:scaleType="centerCrop"
          android:layout_height="wrap_content"
          android:src="@mipmap/group1"/>

     </android.support.v7.widget.CardView>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_gravity="end"
         android:layout_marginTop="20dp"
         android:orientation="vertical"
         android:baselineAligned="true"
         android:layout_height="wrap_content">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginRight="15dp"
          android:gravity="end"
          android:textSize="20sp"
          android:id="@+id/h1"
          android:text="Total Meditation"
          android:textStyle="bold"
          />



      <TextView
          android:layout_width="match_parent"
          android:layout_marginTop="20dp"
          android:id="@+id/Tmedi"
          android:layout_height="wrap_content"
          android:textSize="20sp"
          android:layout_marginRight="25dp"
          android:gravity="end"
          android:text="0"

          />

     </LinearLayout>


    </LinearLayout>


   </android.support.v7.widget.CardView>


   <android.support.v7.widget.CardView
       android:layout_width="match_parent"
       app:cardCornerRadius="8dp"
       android:layout_marginStart="20dp"
       android:layout_marginEnd="20dp"
       android:id="@+id/sc"
       android:layout_marginTop="30dp"
       android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="#FFAB91"
        android:layout_height="wrap_content">
     <android.support.v7.widget.CardView
         android:layout_width="40dp"
         android:layout_marginStart="15dp"
         app:cardCornerRadius="40dp"
         android:layout_height="40dp">

      <ImageView
          android:layout_width="wrap_content"
          android:scaleType="centerCrop"
          android:layout_height="wrap_content"
          android:src="@mipmap/group1"/>

     </android.support.v7.widget.CardView>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_gravity="end"
         android:layout_marginTop="20dp"
         android:orientation="vertical"
         android:baselineAligned="true"
         android:layout_height="wrap_content">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginRight="15dp"
          android:gravity="end"
          android:id="@+id/h2"
          android:textSize="20sp"
          android:text="Total Japs"
          android:textStyle="bold"
          />



      <TextView
          android:layout_width="match_parent"
          android:layout_marginTop="20dp"
          android:id="@+id/Tjaps"
          android:layout_height="wrap_content"
          android:textSize="20sp"
          android:layout_marginRight="25dp"
          android:gravity="end"
          android:text="0"

          />

     </LinearLayout>


    </LinearLayout>


   </android.support.v7.widget.CardView>


   <android.support.v7.widget.CardView
       android:layout_width="match_parent"
       android:layout_marginTop="30dp"
       android:id="@+id/tc"
       app:cardCornerRadius="8dp"
       android:layout_marginStart="20dp"
       android:layout_marginEnd="20dp"
       android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="#FFAB91"
        android:layout_height="wrap_content">

     <android.support.v7.widget.CardView
         android:layout_marginStart="15dp"
         android:layout_width="40dp"
         app:cardCornerRadius="40dp"
         android:layout_height="40dp">

      <ImageView
          android:layout_width="wrap_content"
          android:scaleType="centerCrop"
          android:layout_height="wrap_content"
          android:src="@mipmap/group1"/>

     </android.support.v7.widget.CardView>


     <LinearLayout
         android:layout_width="match_parent"
         android:layout_gravity="end"
         android:layout_marginTop="20dp"
         android:orientation="vertical"
         android:baselineAligned="true"
         android:layout_height="wrap_content">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/h3"
          android:layout_marginRight="15dp"
          android:gravity="end"
          android:textSize="20sp"
          android:text="Total Swadhyay"
          android:textStyle="bold"
          />



      <TextView
          android:layout_width="match_parent"
          android:layout_marginTop="20dp"
          android:id="@+id/Tswadhya"
          android:layout_height="wrap_content"
          android:textSize="20sp"
          android:layout_marginRight="25dp"
          android:gravity="end"
          android:text="0"

          />

     </LinearLayout>


    </LinearLayout>


   </android.support.v7.widget.CardView>

   <android.support.v7.widget.CardView
       android:layout_width="match_parent"
       android:layout_marginTop="30dp"
       android:id="@+id/fourthc"
       app:cardCornerRadius="8dp"
       android:layout_marginStart="20dp"
       android:layout_marginEnd="20dp"
       android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="#FFAB91"
        android:layout_height="wrap_content">

     <android.support.v7.widget.CardView
         android:layout_marginStart="15dp"
         android:layout_width="40dp"
         app:cardCornerRadius="40dp"
         android:layout_height="40dp">

      <ImageView
          android:layout_width="wrap_content"
          android:scaleType="centerCrop"
          android:layout_height="wrap_content"
          android:src="@mipmap/group1"/>

     </android.support.v7.widget.CardView>


     <LinearLayout
         android:layout_width="match_parent"
         android:layout_gravity="end"
         android:layout_marginTop="20dp"
         android:orientation="vertical"
         android:baselineAligned="true"
         android:layout_height="wrap_content">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginRight="15dp"
          android:id="@+id/h4"
          android:gravity="end"
          android:textSize="20sp"
          android:text="Total Yagya"
          android:textStyle="bold"
          />



      <TextView
          android:layout_width="match_parent"
          android:layout_marginTop="20dp"
          android:id="@+id/Tyagya"
          android:layout_height="wrap_content"
          android:textSize="20sp"
          android:layout_marginRight="25dp"
          android:gravity="end"
          android:text="0"

          />

     </LinearLayout>


    </LinearLayout>


   </android.support.v7.widget.CardView>

   <com.github.mikephil.charting.charts.BarChart
       android:layout_width="match_parent"
       android:layout_marginTop="30dp"
       android:id="@+id/totalBar"
       android:layout_height="200dp">

   </com.github.mikephil.charting.charts.BarChart>




  </LinearLayout>

 </ScrollView>

</RelativeLayout>